<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Referral_Date_Decisioned</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  NOT(ISBLANK(TEXT(Referral_Decision__c))), 
  ISBLANK( Referral_Date_Decisioned__c))</errorConditionFormula>
    <errorDisplayField>Referral_Date_Decisioned__c</errorDisplayField>
    <errorMessage>When a Referral Decision is selected, a decision date is required.</errorMessage>
</ValidationRule>
