<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   !ISBLANK(Opportunity__c),
   $Setup.ORE__c.Bypass__c =False, 
   Opportunity__r.IsClosed
)</errorConditionFormula>
    <errorMessage>You cannot edit an asset when the related opportunity is in a closed stage.</errorMessage>
</ValidationRule>
