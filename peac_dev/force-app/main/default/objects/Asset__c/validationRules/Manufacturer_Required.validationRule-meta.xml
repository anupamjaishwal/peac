<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Manufacturer_Required</fullName>
    <active>true</active>
    <description>SAL-4932</description>
    <errorConditionFormula>AND(

ISPICKVAL(Equipment_Code__c,&apos;Copiers&apos;),
ISBLANK(Manufacturer__c),

OR(
$Profile.Name  = &quot;Partner Ambassador&quot;, 
$Profile.Name  = &quot;CMS&quot;
     )
)</errorConditionFormula>
    <errorDisplayField>Manufacturer__c</errorDisplayField>
    <errorMessage>Manufacturer is required when Equipment Code is &apos;Office Equipment - Copiers</errorMessage>
</ValidationRule>
