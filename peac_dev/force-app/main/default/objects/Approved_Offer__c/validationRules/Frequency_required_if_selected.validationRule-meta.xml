<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Frequency_required_if_selected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   Select__c,
   ISBLANK(TEXT(Selected_Frequency__c))
)</errorConditionFormula>
    <errorMessage>You must select a frequency to select an approved offer.</errorMessage>
</ValidationRule>
