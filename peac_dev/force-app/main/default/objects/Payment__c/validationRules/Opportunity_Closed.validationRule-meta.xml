<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   !ISBLANK(Opportunity__c),
   Opportunity__r.IsClosed,
   !$Setup.ORE__c.Bypass__c
)</errorConditionFormula>
    <errorMessage>Payments may not be edited when the related opportunity is in a closed stage.</errorMessage>
</ValidationRule>
